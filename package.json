{
	"name": "scs-syntax-highlighting",
	"description": "Schedule? Scripted.",
	"author": "insberr&Wackery",
	"license": "MIT",
	"version": "0.0.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/insberr/scs-syntax-highlighting.git"
	},
	"publisher": "insberr & wackery",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:scs"
	],
	"main": "./out/client/extension",
	"scripts": {
		"vscode:prepublish": "yarn compile",
		"compile": "parcel build",
		"watch": "parcel watch",
		"lint": "eslint ./src --ext .ts,.tsx",
		"pub": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.14",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"chokidar": "^3.5.3",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"parcel": "^2.7.0",
		"typescript": "^4.8.4",
		"vsce": "^2.14.0"
	},
	"packageManager": "yarn@3.2.4",
	"dependencies": {
		"vscode-languageclient": "^8.0.2",
		"vscode-languageserver": "^8.0.2",
		"vscode-languageserver-textdocument": "^1.0.7"
	},
	"contributes": {
		"languages": [
			{
				"id": "scs",
				"aliases": [
					"schedule script",
					"scs"
				],
				"extensions": [
					".scs"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "scs",
				"scopeName": "source.scs",
				"path": "./syntaxes/scs.tmLanguage.json"
			}
		]
	},
	"targets": {
		"main": false,
		"extension": {
			"source": "src/client/extension.ts",
			"includeNodeModules": {
				"vscode-languageclient": true,
				"vscode": false
			},
			"distDir": "out/client",
			"context": "node",
			"isLibrary": true
		},
		"server": {
			"source": "src/server/server.ts",
			"includeNodeModules": {
				"vscode-languageserver": true,
				"vscode-languageserver-textdocument": true
			},
			"distDir": "out/server",
			"context": "node",
			"isLibrary": true
		}
	}
}
