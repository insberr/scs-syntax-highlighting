{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "schedule script",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#brackets"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.scs",
                    "match": "\\b(\\d{1,2}:\\d{2})\\b"
                },
                {
                    "name": "keyword.other.scs",
                    "match": "\\b(overide|schedule|event|class|lunch|to|remove|insert|force|teacher|from|assing|user)\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.scs",
                    "match": "\\b(\\d+)\\b"
                },
                {
                    "name": "constant.other.scs",
                    "match": "\\b(\\d+\\:\\d+)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.scs",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.scs",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.scs",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.scs",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.other.scs",
                    "begin": "`",
                    "end": "`",
                    "patterns": [
                        {
                            "name": "constant.character.escape.scs",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.scs",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.scs",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.scs",
                    "match": "\\b(\\+|\\-|\\*|\\/|\\=|\\<|\\>|\\&|\\|)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "support.function.scs",
                    "match": "\\b(\\w+)\\("
                }
            ]
        }
    },
    "scopeName": "source.scs"
}
